{
    "app-id" : "org.ghidra_sre.Desktop",
    "branch": "stable",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "18.08",
    "sdk" : "org.freedesktop.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.openjdk11"
    ],
    "command" : "ghidra",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home",
         "--env=PATH=/usr/bin:/app/bin:/app/jdk/bin",
         "--env=JAVA_HOME=/app/jdk"
    ],
    "modules" : [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
              "/usr/lib/sdk/openjdk11/installjdk.sh"
            ]
        },
        {
            "name": "ghidra",
            "buildsystem": "simple",
            "build-commands": [
                "for i in docs Extensions Ghidra GPL licenses server support ; do install -d $i /app/lib/ghidra/ ; cp -r $i/ /app/lib/ghidra/$i/ ; done",
                "install -Dm755 ghidraRun /app/lib/ghidra/ghidraRun",
                "install -Dm755 ghidra.sh /app/bin/ghidra",
                "install -Dm644 org.ghidra_sre.Desktop.png /app/share/icons/org.ghidra_sre.Desktop.png",
                "install -Dm644 org.ghidra_sre.Desktop.desktop /app/share/applications/org.ghidra_sre.Desktop.desktop",
                "install -Dm644 org.ghidra_sre.Desktop.appdata.xml /app/share/appdata/org.ghidra_sre.Desktop.appdata.xml"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "sha256": "10ffd65c266e9f5b631c8ed96786c41ef30e2de939c3c42770573bb3548f8e9f",
                    "url": "https://ghidra-sre.org/ghidra_9.0.2_PUBLIC_20190403.zip"
                },
                {
                    "type": "file",
                    "path": "org.ghidra_sre.Desktop.desktop"
                },
                {
                    "type": "file",
                    "path": "org.ghidra_sre.Desktop.appdata.xml"
                },
                {
                    "type": "file",
                    "path": "org.ghidra_sre.Desktop.png"
                },
                {
                    "type" : "script",
                    "dest-filename" : "ghidra.sh",
                    "commands": [
                       "exec /app/lib/ghidra/ghidraRun \"$@\""
                    ]
                }
            ]
        }
    ]
}
