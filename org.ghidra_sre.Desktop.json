{
    "app-id" : "org.ghidra_sre.Desktop",
    "default-branch": "stable",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "20.08",
    "sdk" : "org.freedesktop.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.openjdk11"
    ],
    "command" : "ghidra",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home",
        "--env=PATH=/usr/bin:/app/bin:/app/jdk/bin",
        "--env=JAVA_HOME=/app/jdk"
    ],
    "modules" : [
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
              "/usr/lib/sdk/openjdk11/installjdk.sh"
            ]
        },
        {
            "name": "ghidra",
            "buildsystem": "simple",
            "build-commands": [
                "for i in docs Extensions Ghidra GPL licenses server support ; do install -d $i /app/lib/ghidra/ ; cp -r $i/ /app/lib/ghidra/$i/ ; done",
                "install -Dm755 ghidraRun /app/lib/ghidra/ghidraRun",
                "install -Dm755 ghidra.sh /app/bin/ghidra",
                "install -Dm644 org.ghidra_sre.Desktop.png /app/share/icons/org.ghidra_sre.Desktop.png",
                "install -Dm644 org.ghidra_sre.Desktop.desktop /app/share/applications/org.ghidra_sre.Desktop.desktop",
                "install -Dm644 org.ghidra_sre.Desktop.metainfo.xml /app/share/metainfo/org.ghidra_sre.Desktop.metainfo.xml",
                "sed -i 's,bg,fg,' /app/lib/ghidra/ghidraRun"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "sha256": "ebe3fa4e1afd7d97650990b27777bb78bd0427e8e70c1d0ee042aeb52decac61",
                    "url": "https://ghidra-sre.org/ghidra_9.1.2_PUBLIC_20200212.zip"
                },
                {
                    "type": "file",
                    "path": "org.ghidra_sre.Desktop.desktop"
                },
                {
                    "type": "file",
                    "path": "org.ghidra_sre.Desktop.metainfo.xml"
                },
                {
                    "type": "file",
                    "path": "org.ghidra_sre.Desktop.png"
                },
                {
                    "type" : "script",
                    "dest-filename" : "ghidra.sh",
                    "commands": [
                       "export USER_HOME=$XDG_CONFIG_HOME",
                       "mkdir -p $USER_HOME/ghidra_scripts/",
                       "exec /app/lib/ghidra/ghidraRun \"$@\""
                    ]
                }
            ]
        }
    ]
}
